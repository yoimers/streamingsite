{
  "projects": {
    "default": "Wavelet"
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "functions": {
      "predeploy": "npm --prefix functions run build"
    }
  }
}
